{
  "expo": {
    "name": "SmartNest",
    "slug": "smartnest",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FCFCF9"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartnest.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "SmartNest uses Face ID to authenticate you",
        "NSLocalNetworkUsageDescription": "SmartNest needs local network access"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#208A95"
      },
      "package": "com.smartnest.app"
    },
    "web": {
      "favicon": "./assets/favicon.ico",
      "name": "SmartNest",
      "shortName": "SmartNest",
      "description": "Smart Home Access Control",
      "scope": "/",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait-primary",
      "themeColor": "#208A95",
      "backgroundColor": "#FCFCF9"
    },
    "scheme": "smartnest",
    "experiments": {
      "typedRoutes": true
    },
    "plugins": [
      [
        "expo-local-authentication"
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
